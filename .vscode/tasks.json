{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build SDL project",
            "type": "shell",
            "command": "g++",
            "args": [
                ".\\files\\*.cpp",
                "-I",
                "C:\\C++projects\\Libs\\SDL2\\x86_64-w64-mingw32\\include\\",
                "-L",
                "C:\\C++projects\\Libs\\SDL2\\x86_64-w64-mingw32\\lib\\",
                "-lmingw32",
                "-lSDL2main",
                "-lSDL2",
                "-o",
                "BaseSDLProject.exe",
                "-fdiagnostics-color=always",
                "-std=c++23",
                "-Wall",
                "-g"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++.exe build active file",
            "command": "C:\\mingw64\\bin\\clang++.exe",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        }
    ]
}